<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.george.listabebidas.DetailActivity">

    <EditText
        android:id="@+id/drinkName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:inputType="textImeMultiLine"
        android:text="Name" />

    <EditText
        android:id="@+id/ingEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@+id/prepET"
        android:layout_below="@+id/prepET"
        android:layout_marginTop="126dp"
        android:ems="10"
        android:inputType="textImeMultiLine"
        android:text="Name" />

    <EditText
        android:id="@+id/prepET"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@+id/drinkName"
        android:layout_below="@+id/drinkName"
        android:layout_marginTop="49dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Name" />

</android.widget.RelativeLayout>
